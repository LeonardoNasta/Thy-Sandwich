<div class="container">
    <div class="row">
        <div class="col 8">
            <h1> Create And Snack at the Sandwich Shack! </h1>
        </div>
    </div>

    <div class="row">
        <div id="existing-sandwiches" class="col 4">

            <ul class="collection">
                {{#each sandwich}} {{#unless this.devoured}}
                <li class="collection-item">{{this.id}}. {{this.sandwich_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <a class="waves-effect waves-light btn">Consume!</a>
                    </form>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>


        <div id="devoured" class="col 4">

            <h2>Sandwiches That Have Been Devoured: </h2>
            <div class="col 4">
                <ul class="collection">
                    {{#each burgers}} {{#if this.devoured}}
                    <li>
                        {{this.id}}. {{this.burger_name}}
                    </li>
                    {{/if}} {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div id='new-sandwich'>
        <h2>Build your own: </h2>

        <form class="update-form" action="/" method="POST">
            <div class="input-field">
                <label for="your-sandwich">Name your sandwich</label>
                <input type="text" id="your-sandwich" name="sandwich_name">
            </div>
            <a class="waves-effect waves-light btn">Add your creation!</a>
        </form>
    </div>